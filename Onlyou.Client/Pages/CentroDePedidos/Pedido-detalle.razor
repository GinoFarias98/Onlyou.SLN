            if (response.IsSuccessStatusCode)
            {
                await CargarPedido();
                CerrarModalPago();
                await MostrarExito("Pago registrado correctamente");
            }
            else
            {
                await MostrarError("No se pudo registrar el pago");
            }
        }
        catch (Exception ex)
        {
            await MostrarError($"Error al registrar pago: {ex.Message}");
        }
    }

