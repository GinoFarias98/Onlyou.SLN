@page "/pedido-detalle/{pedidoId:int}"
@using Onlyou.Shared.DTOS.Pedidos
@using Onlyou.Shared.DTOS.Pedidos.PedidoItem
@using Onlyou.Shared.DTOS.Producto
@using Onlyou.Shared.DTOS.Talle
@using System.Text.Json
@using System.Text
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject SweetAlertService Swal

<style>
    /* ===== ESTILOS MEJORADOS ===== */
    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .header-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        color: white;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .status-stepper {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin: 2rem 0;
        gap: 1rem;
    }

        .status-stepper::before {
            content: '';
            position: absolute;
            top: 20px;
            left: 10%;
            right: 10%;
            height: 3px;
            background: #e9ecef;
            z-index: 1;
        }

    .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 2;
        flex: 1;
        min-width: 0;
    }

    .step-icon {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #e9ecef;
        color: #6c757d;
        font-weight: bold;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

    .step.active .step-icon {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        transform: scale(1.1);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .step.completed .step-icon {
        background: #28a745;
        color: white;
    }

    .step-label {
        font-size: 0.7rem;
        font-weight: 600;
        text-align: center;
        color: #6c757d;
        line-height: 1.2;
    }

    .step.active .step-label {
        color: #667eea;
        font-weight: 700;
    }

    .product-card {
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border-left: 4px solid #20c997;
    }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .action-btn {
        border-radius: 10px;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
        border: none;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

    .badge-modern {
        border-radius: 20px;
        padding: 0.5rem 1rem;
        font-weight: 600;
        font-size: 0.8rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .info-item {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        border-left: 4px solid #667eea;
    }

    .progress-modern {
        height: 8px;
        border-radius: 10px;
        background: #e9ecef;
        overflow: hidden;
    }

    .progress-bar-modern {
        background: linear-gradient(135deg, #28a745, #20c997);
        transition: width 0.5s ease;
    }

    .detail-section {
        margin-bottom: 2rem;
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #e9ecef;
    }

    /* ===== RESPONSIVE MEJORADO ===== */
    @@media (max-width: 768px) {
        .header-modern {
            padding: 1.5rem 1rem;
            text-align: center;
        }

        .status-stepper {
            flex-direction: column;
            align-items: center;
            gap: 1.5rem;
        }

            .status-stepper::before {
                display: none;
            }

        .step {
            flex-direction: row;
            width: 100%;
            gap: 1rem;
            text-align: left;
        }

        .step-icon {
            margin-bottom: 0;
            flex-shrink: 0;
        }

        .step-label {
            text-align: left;
            font-size: 0.8rem;
        }

        .action-btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .header-buttons {
            flex-direction: column;
            width: 100%;
            gap: 0.5rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 576px) {
        .header-modern h1 {
            font-size: 1.5rem;
        }

        .header-modern p {
            font-size: 0.9rem;
        }
    }

    /* ===== ANIMACIONES MEJORADAS ===== */
    .fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    .slide-in {
        animation: slideIn 0.6s ease-out;
    }

    @@keyframes slideIn {
        from {
            transform: translateX(-20px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* ===== DETALLES DE PRODUCTOS MEJORADOS ===== */
    .product-detail-grid {
        display: grid;
        grid-template-columns: auto 1fr auto auto;
        gap: 1rem;
        align-items: center;
        padding: 1rem;
        background: white;
        border-radius: 10px;
        margin-bottom: 0.5rem;
        border: 1px solid #e9ecef;
    }

    .product-image {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        object-fit: cover;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .product-info {
        min-width: 0;
    }

    .product-name {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.25rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-details {
        font-size: 0.8rem;
        color: #6c757d;
    }

    .product-price {
        text-align: right;
        font-weight: 600;
    }

    .product-subtotal {
        font-weight: 700;
        color: #28a745;
        text-align: right;
    }

    @@media (max-width: 768px) {
        .product-detail-grid {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 0.5rem;
        }

        .product-image {
            margin: 0 auto;
        }

        .product-price, .product-subtotal {
            text-align: center;
        }
    }

    /* ===== TARJETAS DE PEDIDOS COMPACTAS ===== */
    .compact-pedido-card {
        transform: scale(0.92);
        transform-origin: center;
        margin: -5px 0;
    }

        .compact-pedido-card .card-body {
            padding: 0.6rem !important;
        }

        .compact-pedido-card .card-footer {
            padding: 0.4rem !important;
        }

        .compact-pedido-card .producto-chip {
            padding: 2px 6px;
            font-size: 0.7rem;
            margin: 1px;
        }

        .compact-pedido-card .action-btn {
            padding: 0.35rem 0.7rem;
            font-size: 0.78rem;
        }

        .compact-pedido-card .card-title {
            font-size: 0.85rem;
            margin-bottom: 0.2rem;
        }

        .compact-pedido-card .small {
            font-size: 0.72rem;
        }

        .compact-pedido-card .stats-number {
            font-size: 1.3rem;
        }

        .compact-pedido-card .status-badge {
            font-size: 0.65rem;
            padding: 4px 8px;
        }

    /* Grid más compacto para mostrar más tarjetas */
    .compact-grid .col-card {
        flex: 0 0 auto;
        width: 33.333333%; /* 3 por fila */
        margin-bottom: 0.5rem;
    }

    @@media (min-width: 1400px) {
        .compact-grid .col-card {
            width: 25%; /* 4 por fila en pantallas grandes */
        }
    }

    @@media (max-width: 768px) {
        .compact-grid .col-card {
            width: 50%; /* 2 por fila en móviles */
        }
    }

    @@media (max-width: 576px) {
        .compact-grid .col-card {
            width: 100%; /* 1 por fila en móviles muy pequeños */
        }
    }


</style>

<div class="container-fluid py-4 fade-in">
    <!-- HEADER MEJORADO Y RESPONSIVE -->
    <div class="header-modern slide-in">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="d-flex align-items-center flex-wrap gap-3">
                    <button class="btn btn-light btn-sm action-btn" @onclick="VolverALista">
                        <i class="fas fa-arrow-left me-2"></i>Volver a Pedidos
                    </button>
                    <div>
                        <h1 class="h3 fw-bold mb-2">
                            <i class="fas fa-receipt me-2"></i>Pedido #@pedidoId
                        </h1>
                        <p class="mb-0 opacity-90">
                            <i class="fas fa-calendar me-1"></i>
                            @(pedido?.FechaGenerado.ToString("dd/MM/yyyy 'a las' HH:mm") ?? "Cargando...")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex gap-2 flex-wrap header-buttons justify-content-md-end">
@*                     <button class="btn btn-light btn-sm action-btn" @onclick="RecargarPedido">
                        <i class="fas fa-sync-alt me-2"></i>Actualizar
                    </button> *@
                   @*  @if (!string.IsNullOrEmpty(pedido?.Telefono))
                    {
                        <button class="btn btn-success btn-sm action-btn whatsapp-btn" @onclick="ContactarWhatsApp">
                            <i class="fab fa-whatsapp me-2"></i>Contactar Cliente
                        </button>
                    } *@
                </div>
            </div>
        </div>
    </div>

    @if (cargando)
    {
        <!-- LOADING MEJORADO -->
        <div class="text-center py-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Cargando pedido...</span>
            </div>
            <p class="mt-3 text-muted">Cargando información del pedido...</p>
        </div>
    }
    else if (pedido == null)
    {
        <!-- ESTADO NO ENCONTRADO MEJORADO -->
        <div class="text-center py-5">
            <div class="glass-card p-5">
                <i class="fas fa-exclamation-triangle fa-4x text-warning mb-3"></i>
                <h4 class="text-dark mb-3">Pedido no encontrado</h4>
                <p class="text-muted mb-4">El pedido solicitado no existe o no se pudo cargar</p>
                <button class="btn btn-primary action-btn" @onclick="VolverALista">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Pedidos
                </button>
            </div>
        </div>
    }
    else
    {
@*         <!-- ALERTAS -->
        @if (!string.IsNullOrEmpty(mensaje))
        {
            <div class="row mb-4">
                <div class="col">
                    <div class="alert @(tipoMensaje == "success" ? "alert-success alert-dismissible fade show" : "alert-danger alert-dismissible fade show") glass-card" role="alert">
                        <i class="fas @(tipoMensaje == "success" ? "fa-check-circle" : "fa-exclamation-circle") me-2"></i>
                        @mensaje
                        <button type="button" class="btn-close" @onclick="CerrarMensaje"></button>
                    </div>
                </div>
            </div>
        } *@

        <div class="row g-4">
            <!-- COLUMNA IZQUIERDA - INFORMACIÓN PRINCIPAL -->
            <div class="col-lg-8">
                <!-- PROGRESO DEL PEDIDO MEJORADO -->
                <div class="glass-card p-4 mb-4">
                    <h5 class="section-title">
                        <i class="fas fa-road me-2 text-primary"></i>Progreso del Pedido
                    </h5>
                    <div class="status-stepper">
                        @foreach (var step in steps)
                        {
                            <div class="step @(step.IsActive(pedido.EstadoPedidoId) ? "active" : "") @(step.IsCompleted(pedido.EstadoPedidoId) ? "completed" : "")">
                                <div class="step-icon">
                                    @if (step.IsCompleted(pedido.EstadoPedidoId))
                                    {
                                        <i class="fas fa-check"></i>
                                    }
                                    else
                                    {
                                        <i class="@step.Icon"></i>
                                    }
                                </div>
                                <span class="step-label">@step.Label</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- INFORMACIÓN DEL CLIENTE MEJORADA -->
                <div class="glass-card p-4 mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="section-title mb-0">
                            <i class="fas fa-user-circle me-2 text-success"></i>Información del Cliente
                        </h5>
                        <span class="badge bg-success badge-modern">
                            <i class="fas fa-shopping-cart me-1"></i>@pedido.PedidoItems.Count productos
                        </span>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <small class="text-muted fw-bold">NOMBRE COMPLETO</small>
                            <div class="h6 mb-0 text-dark">@pedido.NombreCliente</div>
                            <small class="text-muted fw-bold">DNI</small>
                            <div class="h6 mb-0 text-dark">@pedido.DNI</div>
                        </div>
                        <div class="info-item">
                            <small class="text-muted fw-bold">TELÉFONO</small>
                            <div class="h6 mb-0">
                                @if (!string.IsNullOrEmpty(pedido.Telefono))
                                {
                                    <button class="btn btn-success btn-sm action-btn" @onclick="ContactarWhatsApp">
                                        <i class="fab fa-whatsapp me-1"></i>@pedido.Telefono
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted">No especificado</span>
                                }
                            </div>
                        </div>
                        <div class="info-item">
                            <small class="text-muted fw-bold">DIRECCIÓN DE ENVÍO</small>
                            <div class="h6 mb-0">@pedido.DireccionCliente</div>
                        </div>
                        <div class="info-item">
                            <small class="text-muted fw-bold">LOCALIDAD</small>
                            <div class="h6 mb-0">@pedido.Localidad</div>
                        </div>
                    </div>

@*                     @if (!string.IsNullOrEmpty(pedido.Descripcion))
                    {
                        <div class="mt-3">
                            <small class="text-muted fw-bold">NOTAS ADICIONALES</small>
                            <div class="mt-2 p-3 bg-light rounded">@pedido.Descripcion</div>
                        </div>
                    } *@
                </div>

                <!-- DETALLE DE PRODUCTOS MEJORADO -->
                <div class="glass-card p-4">
                    <h5 class="section-title">
                        <i class="fas fa-boxes me-2 text-info"></i>Detalle de Productos
                        <span class="badge bg-primary ms-2">@pedido.PedidoItems.Count</span>
                    </h5>

                    <div class="detail-section">
                        @foreach (var item in pedido.PedidoItems)
                        {
                            <div class="product-detail-grid">
                                <div class="product-image">
                                    @if (!string.IsNullOrEmpty(item.ProductoImagen) && !item.ProductoImagen.StartsWith("📦"))
                                    {
                                        <img src="@item.ProductoImagen" alt="@item.ProductoNombre"
                                             class="w-100 h-100 rounded"
                                             onerror="this.style.display='none'; this.parentElement.innerHTML='<i class=\'fas fa-box\'></i>';" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-box text-muted"></i>
                                    }
                                </div>

                                <div class="product-info">
                                    <div class="product-name">@item.ProductoNombre</div>
                                    <div class="product-details">
                                        @if (!string.IsNullOrEmpty(item.ProductoDescripcion))
                                        {
                                            <div>@item.ProductoDescripcion</div>
                                        }
                                        <div class="product-details mt-1">
                                            <div><strong>Color:</strong> @item.ColorNombre</div>
                                            <div><strong>Talle:</strong> @item.TalleNombre</div>
                                        </div>
                                        @if (item.ProveedorId.HasValue && !string.IsNullOrEmpty(item.ProveedorNombre))
                                        {
                                            <div class="mt-1">

                                                <span class="badge bg-info badge-modern">
                                                    <i class="fas fa-truck me-1"></i>@item.ProveedorNombre
                                                </span>
                                                @if (!string.IsNullOrEmpty(item.ProveedorTelefono))
                                                {
                                                    <button class="btn btn-outline-success btn-sm ms-2"
                                                            @onclick="() => ContactarProveedor(item)">
                                                        <i class="fas fa-phone me-1"></i>Contactar Proveedor
                                                    </button>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="product-price">
                                    <div class="text-muted small">Precio unitario</div>
                                    <div class="fw-bold">$@item.PrecioUnitarioVenta.ToString("N0")</div>
                                    <div class="text-muted small">x @item.Cantidad</div>
                                </div>

                                <div class="product-subtotal">
                                    <div class="text-muted small">Subtotal</div>
                                    <div class="fw-bold">$@item.SubTotal.ToString("N0")</div>
                                </div>
                                <div class="text-end">
                                    <button class="btn btn-outline-primary btn-sm action-btn"
                                            @onclick="() => AbrirModalEditarItem(item)">
                                        <i class="fas fa-edit"></i> Editar
                                    </button>
                                </div>
                            </div>
                        }

                        <!-- TOTAL MEJORADO -->
                        <div class="mt-4 pt-3 border-top">
                            <div class="row compact-grid">
                                <div class="col-6">
                                    <h6 class="text-muted">Subtotal:</h6>
                                    <h6 class="text-muted">Envío:</h6>
                                    <h5 class="fw-bold text-dark mt-2">Total del Pedido:</h5>
                                </div>
                                <div class="col-6 text-end">
                                    <h6>$@pedido.MontoTotal.ToString("N0")</h6>
                                    <h6 class="text-success">Gratis</h6>
                                    <h4 class="fw-bold text-success mt-2">$@pedido.MontoTotal.ToString("N0")</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- COLUMNA DERECHA - ACCIONES Y RESUMEN MEJORADO -->
            <div class="col-lg-4">
                <!-- RESUMEN FINANCIERO MEJORADO -->
                <div class="glass-card p-4 mb-4">
                    <h5 class="section-title">
                        <i class="fas fa-chart-pie me-2 text-warning"></i>Resumen Financiero
                    </h5>

                    <div class="space-y-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Total del Pedido:</span>
                            <strong class="h5">$@pedido.MontoTotal.ToString("N0")</strong>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Monto Pagado:</span>
                            <strong class="h5 text-success">$@pedido.MontoPagado.ToString("N0")</strong>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Saldo Pendiente:</span>
                            <strong class="h4 @(pedido.SaldoPendiente > 0 ? "text-danger" : "text-success")">
                                $@pedido.SaldoPendiente.ToString("N0")
                            </strong>
                        </div>

                        @if (pedido.SaldoPendiente > 0)
                        {
                            <div class="progress-modern mb-2">
                                <div class="progress-bar-modern"
                                     style="width: @((pedido.MontoPagado / pedido.MontoTotal * 100).ToString("0"))%">
                                </div>
                            </div>
                            <div class="text-center small text-muted">
                                @((pedido.MontoPagado / pedido.MontoTotal * 100).ToString("0"))% Pagado
                            </div>

                            <button class="btn btn-success w-100 action-btn pulse mt-3"
                                    @onclick="MostrarModalPago">
                                <i class="fas fa-money-bill-wave me-2"></i>
                                Registrar Pago
                            </button>
                        }
                        else
                        {
                            <div class="text-center text-success p-3 bg-light rounded">
                                <i class="fas fa-check-circle fa-2x mb-2"></i>
                                <div class="fw-bold">Pago Completado</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- ACCIONES RÁPIDAS MEJORADAS -->
                <div class="glass-card p-4 mb-4">
                    <h5 class="section-title">
                        <i class="fas fa-bolt me-2 text-primary"></i>Acciones Rápidas
                    </h5>

                    <div class="d-grid gap-2">
                        @if (pedido.EstadoPedidoId == 1)
                        {
                            <button class="btn btn-success action-btn" @onclick="ConfirmarPedido">
                                <i class="fas fa-check me-2"></i>Confirmar Pedido
                            </button>
                        }

                        @if (pedido.EstadoPedidoId == 2)
                        {
                            <button class="btn btn-warning action-btn" @onclick="SolicitarProveedor">
                                <i class="fas fa-truck me-2"></i>Solicitar a Proveedor
                            </button>
                        }

                        @if (pedido.EstadoPedidoId == 3)
                        {
                            <button class="btn btn-info action-btn" @onclick="MarcarRecibidoProveedor">
                                <i class="fas fa-check me-2"></i>Marcar Recibido
                            </button>
                        }

                        @if (pedido.EstadoPedidoId == 4)
                        {
                            <button class="btn btn-success action-btn" @onclick="MarcarListoParaEntregar">
                                <i class="fas fa-check-circle me-2"></i>Marcar Listo
                            </button>
                        }

                        @if (pedido.EstadoPedidoId == 5)
                        {
                            <button class="btn btn-success action-btn" @onclick="MarcarEntregado">
                                <i class="fas fa-check-double me-2"></i>Marcar Entregado
                            </button>
                        }

                        <button class="btn btn-outline-primary action-btn" @onclick="MostrarModalPago">
                            <i class="fas fa-money-bill-wave me-2"></i>Registrar Pago
                        </button>

                        @if (pedido.EstadoPedidoId != 7 && pedido.EstadoPedidoId != 6)
                        {
                            <button class="btn btn-outline-danger action-btn" @onclick="() => CancelarPedido(pedido)">
                                <i class="fas fa-times me-2"></i>Cancelar Pedido
                            </button>
                        }
                    </div>
                </div>

