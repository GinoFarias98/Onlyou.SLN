@page "/Proveedores"
@using Onlyou.Shared.DTOS.Proveedor
@inject IHttpServicios http
@inject SweetAlertService swal
@attribute [Authorize(Roles = "Admin")]

<div class="content">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Gestión de Proveedores</h3>
        <div class="badge bg-primary fs-6">@(provDto?.Count ?? 0) proveedores</div>
    </div>

    <!-- Formulario -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@(modoEdicion ? "Editar Proveedor" : "Nuevo Proveedor")</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nombre del Proveedor</label>
                    <input type="text" class="form-control" @bind="nombre" placeholder="Nombre comercial" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Razón Social</label>
                    <input type="text" class="form-control" @bind="razonSocial" placeholder="Razón social legal" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">CUIT</label>
                    <input type="text" class="form-control" @bind="cuit" placeholder="00-00000000-0" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Teléfono</label>
                    <input type="text" class="form-control" @bind="telefono" placeholder="+54 11 1234-5678" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" @bind="email" placeholder="proveedor@ejemplo.com" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Dirección</label>
                    <input type="text" class="form-control" @bind="direccion" placeholder="Dirección completa" />
                </div>
            </div>

            <div class="d-flex gap-2 justify-content-end mt-3">
                <button class="btn-onlyou" @onclick="GuardarProveedor">
                    <!-- CORREGIDO: Cambié a GuardarProveedor -->
                    @(modoEdicion ? "Actualizar" : "Guardar")
                </button>
                @if (modoEdicion)
                {
                    <button class="btn-onlyou-secondary" @onclick="CancelarEdicion">
                        Cancelar
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Tabla Compacta -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Lista de Proveedores</h5>
        </div>
        <div class="card-body">
            @if (provDto == null)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2 text-muted">Cargando proveedores...</p>
                </div>
            }
            else if (!provDto.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No hay proveedores</h5>
                    <p class="text-muted">Comienza agregando tu primer proveedor</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Contacto</th>
                                <th width="200" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var proveedor in provDto)
                            {
                                <tr>
                                    <td>
                                        <strong>@proveedor.Nombre</strong>
                                        <div class="small text-muted">@proveedor.RazonSocial</div>
                                    </td>
                                    <td>
                                        <div class="small">
                                            @if (!string.IsNullOrEmpty(proveedor.Telefono))
                                            {
                                                <div><i class="bi bi-telephone me-1"></i>@proveedor.Telefono</div>
                                            }
                                            @if (!string.IsNullOrEmpty(proveedor.Email))
                                            {
                                                <div><i class="bi bi-envelope me-1"></i>@proveedor.Email</div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <!-- Botón Ver Detalles -->
                                            <button class="btn-onlyou btn-sm btn-action"
                                                    @onclick="() => MostrarDetallesProveedor(proveedor)"
                                                    title="Ver Detalles">
                                                <i class="bi bi-search"></i>
                                                <span>Detalles</span>
                                            </button>

                                            <!-- Botón Editar -->
                                            <button class="btn-onlyou-secondary btn-sm btn-action"
                                                    @onclick="() => EditarProveedor(proveedor)"
                                                    title="Editar">
                                                <i class="bi bi-pencil"></i>
                                                <span>Editar</span>
                                            </button>

                                            <!-- Botón Archivar -->
                                            <button class="btn-onlyou-danger btn-sm btn-action"
                                                    @onclick="() => ArchivarProveedor(proveedor.Id, proveedor.Nombre)"
                                                    title="Archivar">
                                                <i class="bi bi-trash"></i>
                                                <span>Archivar</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal para Detalles del Proveedor -->
