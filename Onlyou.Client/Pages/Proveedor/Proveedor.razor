{
    <div class="modal-backdrop fade show" style="display: block;"></div>
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del Proveedor</h5>
                    <button type="button" class="btn-close" @onclick="CerrarDetalles"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Nombre Comercial</label>
                                <p class="form-control-plaintext">@proveedorSeleccionado.Nombre</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Razón Social</label>
                                <p class="form-control-plaintext">@proveedorSeleccionado.RazonSocial</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">CUIT</label>
                                <p class="form-control-plaintext">@(proveedorSeleccionado.CUIT ?? "No especificado")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Teléfono</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(proveedorSeleccionado.Telefono))
                                    {
                                        <a href="tel:@proveedorSeleccionado.Telefono" class="text-decoration-none">
                                            <i class="bi bi-telephone me-2"></i>@proveedorSeleccionado.Telefono
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(proveedorSeleccionado.Email))
                                    {
                                        <a href="mailto:@proveedorSeleccionado.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope me-2"></i>@proveedorSeleccionado.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Dirección</label>
                                <p class="form-control-plaintext">@(proveedorSeleccionado.Direccion ?? "No especificada")</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                @* <label class="form-label fw-bold">Estado</label> *@
                               @*  <p>
                                    <span class="badge @(proveedorSeleccionado.Estado ? "bg-success" : "bg-secondary")">
                                        @(proveedorSeleccionado.Estado ? "Activo" : "Inactivo")
                                    </span>
                                </p> *@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-onlyou-secondary" @onclick="CerrarDetalles">Cerrar</button>
@*                     <button type="button" class="btn-onlyou" @onclick="() => { CerrarDetalles(); }">
                        Editar Proveedor
                    </button> *@
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GetProveedorDTO> provDto = new();
    private GetProveedorDTO? proveedorSeleccionado = null;
    private string nombre = string.Empty;
    private string direccion = string.Empty;
    private string razonSocial = string.Empty;
    private string cuit = string.Empty;
    private string telefono = string.Empty;
    private string email = string.Empty;
    private bool estado = true;
    private int provEditandoId = 0;
    private bool modoEdicion = false;

    protected override async Task OnInitializedAsync() => await CargarProveedores();

    private async Task CargarProveedores()
    {
        var resultado = await http.Get<List<GetProveedorDTO>>("api/Proveedores");
        if (!resultado.Error)
        {
            provDto = resultado.Respuesta ?? new List<GetProveedorDTO>();
            StateHasChanged();
        }
    }

    private void MostrarDetallesProveedor(GetProveedorDTO proveedor)
    {
        proveedorSeleccionado = proveedor;
        StateHasChanged();
    }

    private void CerrarDetalles()
    {
        proveedorSeleccionado = null;
        StateHasChanged();
    }

    private async Task GuardarProveedor() // CORREGIDO: Cambié el nombre del método
    {
        // Validaciones front
        if (string.IsNullOrWhiteSpace(nombre))
        {
            await MostrarError("El nombre es obligatorio");
            return;
        }

        if (string.IsNullOrWhiteSpace(cuit))
        {
            await MostrarError("El CUIT es obligatorio");
            return;
        }

        try
        {
            if (modoEdicion)
            {
                var dto = new PutProveedorDTO
                {
                    Nombre = nombre.Trim(),
                    Estado = estado,
                    Direccion = direccion?.Trim(),
                    RazonSocial = razonSocial.Trim(),
                    CUIT = cuit?.Trim(),
                    Telefono = telefono?.Trim(),
                    Email = email?.Trim()
                };

                var respuesta = await http.Put<PutProveedorDTO, GetProveedorDTO>($"api/Proveedores/ModificarProveedorId/{provEditandoId}", dto);

                if (respuesta.Error)
                {
                    var mensaje = await respuesta.ObtenerErrorAsync();
                    await MostrarError(mensaje);
                    return;
                }

                await MostrarExito($"Proveedor '{nombre}' actualizado correctamente");
                modoEdicion = false;
            }
            else
            {
                var dto = new PostProveedorDTO
                {
                    Nombre = nombre.Trim(),
                    Estado = estado,
                    Direccion = direccion?.Trim(),
                    RazonSocial = razonSocial.Trim(),
                    CUIT = cuit?.Trim(),
                    Telefono = telefono?.Trim(),
                    Email = email?.Trim()
                };

                var respuesta = await http.Post<PostProveedorDTO, GetProveedorDTO>("api/Proveedores", dto);

                if (respuesta.Error)
                {
                    var mensaje = await respuesta.ObtenerErrorAsync();
                    await MostrarError(mensaje);
                    return;
                }

                await MostrarExito($"Proveedor '{nombre}' creado correctamente");
            }

            LimpiarFormulario();
            await CargarProveedores();
        }
        catch (Exception ex)
        {
            await MostrarError($"Error inesperado: {ex.Message}");
        }
    }

    private async Task MostrarError(string mensaje)
    {
        await swal.FireAsync(new SweetAlertOptions
        {
            Title = "Atención",
            Text = mensaje,
            Icon = SweetAlertIcon.Warning,
            Background = "#F1C4C4",
            Color = "#D4006A",
            ConfirmButtonColor = "#D4006A",
            ConfirmButtonText = "Ok",
            CustomClass = new SweetAlertCustomClass
            {
                Icon = "icono-custom"
            }
        });
    }

    private async Task MostrarExito(string mensaje)
    {
        await swal.FireAsync(new SweetAlertOptions
        {
            Title = "Éxito",
            Text = mensaje,
            Icon = SweetAlertIcon.Success,
            Background = "#E8F5E8",
            Color = "#28a745",
            ConfirmButtonColor = "#28a745",
            ConfirmButtonText = "Ok"
        });
    }

    private void EditarProveedor(GetProveedorDTO proveedor)
    {
        provEditandoId = proveedor.Id;
        nombre = proveedor.Nombre;
        estado = proveedor.Estado;
        direccion = proveedor.Direccion ?? "";
        razonSocial = proveedor.RazonSocial;
        cuit = proveedor.CUIT ?? "";
        telefono = proveedor.Telefono ?? "";
        email = proveedor.Email ?? "";
        modoEdicion = true;
        proveedorSeleccionado = null; // Cerrar modal si está abierto
        StateHasChanged();

        // // Scroll al formulario para que el usuario vea que está editando
        // JS.InvokeVoidAsync("scrollToElement", "formulario-proveedor");
    }

    private async Task ArchivarProveedor(int id, string nombreProveedor)
    {
        var confirm = await swal.FireAsync(new SweetAlertOptions
        {
            Title = "Confirmar",
            Text = $"¿Seguro que deseas archivar el proveedor {nombreProveedor}?",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí, archivar",
            CancelButtonText = "Cancelar",
            Background = "#F1C4C4",
            Color = "#D4006A",
            ConfirmButtonColor = "#D4006A",
            CancelButtonColor = "#6c757d",
            CustomClass = new SweetAlertCustomClass
            {
                Icon = "icono-custom"
            }
        });

        if (confirm.IsConfirmed)
        {
            var respuesta = await http.Put<object>($"api/Proveedores/EliminarCodigo/{id}", null);
            if (respuesta.Error)
            {
                var mensaje = await respuesta.ObtenerErrorAsync();
                await MostrarError(mensaje);
                return;
            }

            await CargarProveedores();
            await MostrarExito($"Proveedor '{nombreProveedor}' archivado correctamente");
        }
    }

    private void CancelarEdicion() => LimpiarFormulario();

    private void LimpiarFormulario()
    {
        nombre = string.Empty;
        estado = true;
        direccion = string.Empty;
        razonSocial = string.Empty;
        cuit = string.Empty;
        telefono = string.Empty;
        email = string.Empty;
        provEditandoId = 0;
        modoEdicion = false;
        StateHasChanged();
    }
}