@page "/Marcas"
@using Onlyou.Shared.DTOS.Marca
@inject IHttpServicios http
@inject SweetAlertService swal

<div class="content">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Gestión de Marcas</h3>
        <div class="badge bg-primary fs-6">@(marcasDto?.Count ?? 0) marcas</div>
    </div>

    <!-- Formulario -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">@(modoEdicion ? "Editar Marca" : "Nueva Marca")</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label">Nombre de la Marca</label>
                    <input type="text" @bind="nombre" class="form-control" placeholder="Ej: Nike, Adidas, Zara, etc." />
                </div>
            </div>

            <div class="d-flex gap-2 justify-content-end mt-3">
                <button class="btn-onlyou" @onclick="GuardarMarcas">
                    @(modoEdicion ? "Actualizar" : "Guardar")
                </button>
                @if (modoEdicion)
                {
                    <button class="btn-onlyou-secondary" @onclick="CancelarEdicion">
                        Cancelar
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Lista de Marcas</h5>
        </div>
        <div class="card-body">
            @if (marcasDto == null)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2 text-muted">Cargando marcas...</p>
                </div>
            }
            else if (!marcasDto.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-tag fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No hay marcas</h5>
                    <p class="text-muted">Comienza creando tu primera marca</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                               @*  <th width="120" class="text-center">Estado</th> *@
                                <th width="150" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var marca in marcasDto)
                            {
                                <tr>
                                    <td>
                                        <strong>@marca.Nombre</strong>
                                    </td>
@*                                     <td class="text-center">
                                        <span class="badge @(marca.Estado ? "bg-success" : "bg-secondary")">
                                            @(marca.Estado ? "Activo" : "Inactivo")
                                        </span>
                                    </td> *@
                                    <td>
                                        <div class="d-flex gap-2 justify-content-center">
                                            <!-- Botón Editar -->
                                            <button class="btn-onlyou-secondary btn-sm btn-action"
                                                    @onclick="() => EditarMarca(marca)"
                                                    title="Editar">
                                                <i class="bi bi-pencil"></i>
                                                <span>Editar</span>
                                            </button>

                                            <!-- Botón Archivar -->
                                            <button class="btn-onlyou-danger btn-sm btn-action"
                                                    @onclick="() => ArchivarMarca(marca.Id, marca.Nombre)"
                                                    title="Archivar">
                                                <i class="bi bi-trash"></i>
                                                <span>Archivar</span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<GetMarcaDTO> marcasDto = new();
    private string nombre = string.Empty;
    private string? codigo;
    private bool estado = true;
    private int marcaEditandoId = 0;
    private bool modoEdicion = false;

    protected override async Task OnInitializedAsync()
    {
        await CargarMarcas();
    }

    private async Task CargarMarcas()
    {
        var resultado = await http.Get<List<GetMarcaDTO>>("api/Marca");
        if (!resultado.Error)
        {
            marcasDto = resultado.Respuesta!;
        }
    }

    private async Task GuardarMarcas()
    {
        if (string.IsNullOrWhiteSpace(nombre))
        {
            await swal.FireAsync("Atención", "El nombre es obligatorio", SweetAlertIcon.Warning);
            return;
        }

        if (modoEdicion)
        {
            var dto = new PutMarcaDTO
            {
                Nombre = nombre,
                Estado = estado,
                Codigo = codigo
            };

            var respuesta = await http.Put<PutMarcaDTO, GetMarcaDTO>($"api/Marca/ModificarMarcaId/{marcaEditandoId}", dto);

            if (respuesta.Error)
            {
                await swal.FireAsync("Error", "No se pudo editar la Marca", SweetAlertIcon.Error);
                return;
            }

            var marcaActualizada = respuesta.Respuesta!;
            await swal.FireAsync("Éxito",
                $"Marca '{marcaActualizada.Nombre}' actualizado correctamente",
                SweetAlertIcon.Success);

            modoEdicion = false;
        }
        else
        {
            var dto = new PostMarcaDTO
            {
                Nombre = nombre,
            };

            var respuesta = await http.Post<PostMarcaDTO, GetMarcaDTO>("api/Marca", dto);

            if (respuesta.Error)
            {
                await swal.FireAsync("Error", "No se pudo guardar la Marca", SweetAlertIcon.Error);
                return;
            }

            var marcaNueva = respuesta.Respuesta!;
            await swal.FireAsync("Éxito",
                $"Marca '{marcaNueva.Nombre}' creada correctamente",
                SweetAlertIcon.Success);
        }

        LimpiarFormulario();
        await CargarMarcas();
    }

    private void EditarMarca(GetMarcaDTO tipo)
    {
        marcaEditandoId = tipo.Id;
        nombre = tipo.Nombre;
        estado = tipo.Estado;
        modoEdicion = true;
    }

    private async Task ArchivarMarca(int id, string nombre)
    {
        var confirm = await swal.FireAsync(new SweetAlertOptions
        {
            Title = "Confirmar",
            Text = $"¿Seguro que deseas Archivar la Marca {nombre}?",
            Icon = SweetAlertIcon.Question,
            ShowCancelButton = true,
            ConfirmButtonText = "Sí",
            CancelButtonText = "Cancelar"
        });

        if (confirm.IsConfirmed)
        {
            await http.Put<object>($"api/Marca/Archivar/{id}", null);
            await CargarMarcas();
            await swal.FireAsync("Exito", "Marca Archivada de forma satisfactoria", SweetAlertIcon.Success);
        }
    }

    private void CancelarEdicion() => LimpiarFormulario();

    private void LimpiarFormulario()
    {
        nombre = string.Empty;
        codigo = null;
        estado = true;
        marcaEditandoId = 0;
        modoEdicion = false;
    }
}
