    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Establecer el mes actual en el selector
            const currentMonth = new Date().getMonth();
            document.getElementById('month-select').value = currentMonth;

            // Funcionalidad para la selección de fecha
            document.getElementById('apply-date').addEventListener('click', function() {
                const month = document.getElementById('month-select').value;
                const year = document.getElementById('year-select').value;

                // Simular carga de datos
                alert(`Cargando datos para ${getMonthName(month)}/${year}`);
            });

            // Funcionalidad para los botones de paginación
            document.querySelectorAll('.pagination-btn').forEach(button => {
                button.addEventListener('click', function() {
                    if (this.textContent === 'Anterior' || this.textContent === 'Siguiente') {
                        // Lógica para cambiar de página
                        alert(`Navegando a página ${this.textContent}`);
                        return;
                    }

                    document.querySelectorAll('.pagination-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });

                    this.classList.add('active');

                    // Simular carga de página
                    alert(`Cargando página ${this.textContent}`);
                });
            });

            // Funcionalidad para los elementos de categoría
            document.querySelectorAll('.category-item').forEach(item => {
                item.addEventListener('click', function() {
                    document.querySelectorAll('.category-item').forEach(i => {
                        i.classList.remove('active');
                    });
                    this.classList.add('active');
                });
            });

            // Función auxiliar para obtener nombre del mes
            function getMonthName(monthIndex) {
                const months = [
                    'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                    'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
                ];
                return months[monthIndex];
            }
        });
